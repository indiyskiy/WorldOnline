<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <resource-ref>
        <res-ref-name>jdbc/thegamedb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Wildcard means whole app requires authentication</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>1</role-name>
        </auth-constraint>

        <user-data-constraint>
            <!-- transport-guarantee can be CONFIDENTIAL, INTEGRAL, or NONE -->
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

   <!--example-->
    <servlet>
        <display-name>ExampleServlet</display-name>
        <servlet-name>ExampleServlet</servlet-name>
        <servlet-class>view.servlet.admin.ExampleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExampleServlet</servlet-name>
        <url-pattern>/example</url-pattern>
    </servlet-mapping>

    <!--all tags-->
    <servlet>
        <display-name>AllTagsServlet</display-name>
        <servlet-name>AllTagsServlet</servlet-name>
        <servlet-class>view.servlet.admin.AllTagsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllTagsServlet</servlet-name>
        <url-pattern>/alltags</url-pattern>
    </servlet-mapping>

    <!--tag edit-->
    <servlet>
        <display-name>TagEditServlet</display-name>
        <servlet-name>TagEditServlet</servlet-name>
        <servlet-class>view.servlet.admin.TagEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TagEditServlet</servlet-name>
        <url-pattern>/tagedit</url-pattern>
    </servlet-mapping>

    <!--all cards-->
    <servlet>
        <display-name>AllCardsServlet</display-name>
        <servlet-name>AllCardsServlet</servlet-name>
        <servlet-class>view.servlet.admin.AllCardsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllCardsServlet</servlet-name>
        <url-pattern>/allcards</url-pattern>
    </servlet-mapping>

    <!--momplete card info-->
    <servlet>
        <display-name>CompleteCardInfoServlet</display-name>
        <servlet-name>CompleteCardInfoServlet</servlet-name>
        <servlet-class>view.servlet.admin.CompleteCardInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CompleteCardInfoServlet</servlet-name>
        <url-pattern>/completecardinfo</url-pattern>
    </servlet-mapping>

    <!-- image -->
    <servlet>
        <display-name>ImageServlet</display-name>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>view.servlet.admin.ImageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/image/*</url-pattern>
    </servlet-mapping>

    <!-- text group info -->
    <servlet>
        <display-name>CompleteTextGroupInfoServlet</display-name>
        <servlet-name>CompleteTextGroupInfoServlet</servlet-name>
        <servlet-class>view.servlet.admin.CompleteTextGroupInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CompleteTextGroupInfoServlet</servlet-name>
        <url-pattern>/completetextgroupinfo</url-pattern>
    </servlet-mapping>


    <!-- text group info -->
    <servlet>
        <display-name>LogOutServlet</display-name>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>view.servlet.admin.LogOutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>
