<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <resource-ref>
        <res-ref-name>jdbc/thegamedb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

   <!--example-->
    <servlet>
        <display-name>ExampleServlet</display-name>
        <servlet-name>ExampleServlet</servlet-name>
        <servlet-class>view.servlet.ExampleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExampleServlet</servlet-name>
        <url-pattern>/example</url-pattern>
    </servlet-mapping>

    <!--all tags-->
    <servlet>
        <display-name>AllTagsServlet</display-name>
        <servlet-name>AllTagsServlet</servlet-name>
        <servlet-class>view.servlet.AllTagsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllTagsServlet</servlet-name>
        <url-pattern>/alltags</url-pattern>
    </servlet-mapping>

    <!--tag edit-->
    <servlet>
        <display-name>TagEditServlet</display-name>
        <servlet-name>TagEditServlet</servlet-name>
        <servlet-class>view.servlet.TagEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TagEditServlet</servlet-name>
        <url-pattern>/tagedit</url-pattern>
    </servlet-mapping>
</web-app>
